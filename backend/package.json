    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.0.6",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "vitest": "^3.0.6"
  }
}

